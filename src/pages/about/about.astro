---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: '~/assets/images/motionblack.png',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Varam Strength <br />
      <span class="text-accent dark:text-white"> Building Power With Purpose</span>
    </Fragment>

    <Fragment slot="subtitle">
      Varam exists to help people move better, be stronger, and live fully at every age. Our Expert Engine turns
      personal data into adaptive workouts that remain short, effective, and constantly progressive. Your best years are
      always the ones ahead.
      <div class="mt-4 flex items-center justify-center text-md text-gray-500">
        <Icon name="tabler:map-pin" class="w-4 h-4 mr-1 text-gray-400" />
        <span>Based in Toronto, Canada</span>
      </div>
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Key Metrics at a Glance"
    stats={[
      { title: 'Average Session Length', amount: '60 MIN' },
      { title: 'Unique Microcycles Served', amount: '52' },
      { title: 'Personalized Training', amount: '100%' },
      { title: 'Cookie-Cutter Programs', amount: '0' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Who We Service"
    subtitle="Whether you are chasing lifelong strength, preparing for duty, or rebuilding after injury, Varam adapts its training to fit your goals, schedule, and daily readiness."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Lifelong Movers',
        description: 'Stay strong, mobile, and independent with concise sessions that adapt to any schedule.',
        icon: 'tabler:template',
      },
      {
        title: 'Tactical Professionals',
        description: 'Build load-bearing power, endurance, and durability that transfers directly to mission demands.',
        icon: 'tabler:template',
      },
      {
        title: 'Busy Professionals Rebuilding Strength From Injury',
        description:
          'Intelligent progressions restore movement, relieve pain, and safeguard consistency during highstress work weeks.',
        icon: 'tabler:template',
      },
    ]}
  />

